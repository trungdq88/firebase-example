{
  "name": "firebase-example",
  "version": "1.0.0",
  "description": "A web application to demonstrate Firebase features",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-controller": "babel -d ./public/controller/build ./public/controller/src",
